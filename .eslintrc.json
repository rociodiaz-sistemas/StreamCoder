{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "plugin:storybook/recommended",
    "prettier", // Add Prettier configuration
    "plugin:prettier/recommended" // Ensures Prettier errors are displayed as ESLint errors
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "chakra-ui",
    "prettier" // Add Prettier plugin
  ],
  "rules": {
    "prettier/prettier": "error", // Report Prettier issues as ESLint errors
    "comma-dangle": "off", // Disable rule as Prettier handles it
    "indent": "off", // Disable rule as Prettier handles it
    "semi": "off", // Disable rule as Prettier handles it
    "quotes": "off", // Disable rule as Prettier handles it
    "eol-last": "off", // Disable rule as Prettier handles it
    "no-console": "warn",
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
